<!DOCTYPE html>
<html lang="en">
<head>
  <title>Скины</title>
    <%- include('../templates/head'); %>
</head>
<body>
  <header>
    <%- include('../templates/navbar'); %>
</header>
<main>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% if(skins != false) { %>
                <h3>Скины</h3>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Цена</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Картинка</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% skins.forEach(function(skin) { %>
                        <tr>
                            <td scope="row"><%= skin.id %></td>
                            <td><%= skin.title %></td>
                            <td><%= skin.cost %></td>
                            <td><%= skin.description %></td>
                            <td><img width="100px" height="100px" src="<%= skin.thumb_url %>"></td>
                            <td></td>
                          </tr>
                    <% }); %>
                  
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
  </main>
</body>
</html>