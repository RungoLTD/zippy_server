<!DOCTYPE html>
<html lang="en">
<head>
  <title>Статистика</title>
    <%- include('../templates/head'); %>
</head>
<body>
  <header>
    <%- include('../templates/navbar'); %>
</header>
<main>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% if(statistics != false) { %>
                <h3>Статистика</h3>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Пользователь</th>
                    <th scope="col">Дистанция</th>
                    <th scope="col">Время</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% statistics.forEach(function(statistic) { %>
                        <tr>
                            <td scope="row"><%= statistic.id %></td>
                            <td><a href="/web/users/view?id=<%= statistic.user_id %>"><%= statistic.user_name %></a></td>
                            <td><%= statistic.meters %> км.</td>
                            <td><%= statistic.time %></td>
                            <td><a href="/web/statistics/view?id=<%= statistic.id %>"><i class="bi bi-eye"></i></a></td>
                          </tr>
                    <% }); %>
                  
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
  </main>
</body>
</html>