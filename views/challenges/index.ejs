<!DOCTYPE html>
<html lang="en">
<head>
  <title>Челленджи</title>
    <%- include('../templates/head'); %>
</head>
<body>
  <header>
    <%- include('../templates/navbar'); %>
</header>
<main>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <button class="btn btn-success">Добавить</button>
            <% if(challenges != false) { %>
              <h3>Челленджи</h3>
              <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">ID</th>
                      <th scope="col">Наименование</th>
                      <th scope="col">Описание</th>
                      <th scope="col">Дистанция</th>
                      <th scope="col">Время выполнения</th>
                      <th scope="col">Картинка</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                      <% challenges.forEach(function(challenge) { %>
                          <tr>
                              <td scope="row"><%= challenge.id %></td>
                              <td><%= challenge.title_ru %></td>
                              <td><%= challenge.description_ru %></td>
                              <td><%= challenge.distance %> км.</td>
                              <td><%= challenge.durationTime %> </td>
                              <td><img width="100px" height="100px" src="<%= challenge.active_image_url %>"></td>
                              <td></td>
                            </tr>
                      <% }); %>
                    
                  </tbody>
              </table>
            <% } %>
            <nav aria-label="Page navigation example">
              <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">Next</a></li>
              </ul>
            </nav>
        </div>
    </div>
  </main>
</body>
</html>