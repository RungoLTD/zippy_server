<!DOCTYPE html>
<html lang="en">
<head>
  <title>Тренировки</title>
    <%- include('../templates/head'); %>
</head>
<body>
  <header>
    <%- include('../templates/navbar'); %>
</header>
<main>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% if(transactions != false) { %>
                <h3>Транзакции</h3>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Пользователь</th>
                        <th scope="col">Операции</th>
                        <th scope="col">Тип</th>
                        <th scope="col">Деталь</th>
                        <th scope="col">Сумма</th>
                        <th scope="col">Дата</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody>
                        <% transactions.forEach(function(transaction) { %>
                            <tr>
                                <td scope="row"><%= transaction.id %></td>
                                <td><a href="/web/users/view?id=<%= transaction.user_id %>"><% if(transaction.user_name == '') {%> --Без имени-- <% } else { %> <%= transaction.user_name %> <% } %></a></td>
                                <td><%= transaction.operation %></td>
                                <td><%= transaction.type %></td>
                                <td><%= transaction.detail_id %></td>
                                <td><%= transaction.amount %></td>
                                <td><%= transaction.created %></td>
                                <td></td>
                              </tr>
                        <% }); %>
                    </tbody>
                </table>
                <nav>
                  <ul class="pagination pagination-sm">
                    <% var addedNumber = parseInt(page) + 5;
                      var disable_class = "";
                      if(page == 1){
                        disable_class = "disabled";
                      }
                    %>
                    <li class="page-item <%= disable_class %>"><a class="page-link" href="/web/transactions?page=<%= page-1 %>">«</a></li>
                    <% for (i = 1; i <= pagination_len; i++) {%>
                      <% if((i >= (page - 5)) && (i <= (addedNumber))) {
                        var active_class = "";
                        if(page == i){
                          active_class = "active";
                        }
                        %>
                          <li class="page-item <%= active_class %>"><a class="page-link" href="/web/transactions?page=<%= i %>"><%= i %></a></li>
                      <% } %>                      
                    <% } %>
                    <% 
                      var disable_class = "";
                      if(page == pagination_len){
                        disable_class = "disabled";
                      }
                    %>
                    <li class="page-item <%= disable_class %>"><a class="page-link" href="/web/transactions?page=<%= parseInt(page)+1 %>">»</a></li>
                  </ul>
                </nav>
            <% } %>
        </div>
    </div>
  </main>
</body>
</html>