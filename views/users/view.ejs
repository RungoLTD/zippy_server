<!DOCTYPE html>
<html lang="en">
<head>
  <title>Пользователь</title>
    <%- include('../templates/head'); %>
</head>
<body>
  <header>
    <%- include('../templates/navbar'); %>
</header>
<main>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <% if(user_data != false) { %>
                <h3>Пользователь с id <%= user_data.id %></h3>
                <a href="/web/users/update?id=<%= user_data.id %>"><button class="btn btn-primary">Изменить</button></a>
                <button class="btn btn-info" data-bs-toggle="modal" data-bs-target="#addFishcoinModal">Добавить фишкоин</button>
                <table class="table">
                    <tbody>
                      <tr>
                        <th scope="row">Имя</th>
                        <td><%= user_data.name %></td>
                      </tr>
                      <tr>
                        <th scope="row">Скин</th>
                        <td><%= user_data.skin %></td>
                      </tr>
                      <tr>
                        <th scope="row">Фишкоин</th>
                        <td><%= user_data.coins %></td>
                      </tr>
                      <tr>
                        <th scope="row">Email</th>
                        <td><%= user_data.email %></td>
                      </tr>
                      <tr>
                        <th scope="row">Аватар</th>
                        <td>
                          <% if(user_data.avatar != "") { %> 
                            <img width="128" height="128" src="<%= user_data.avatar %>">
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Настроение</th>
                        <td>
                          <% if(user_data.mood != 0) { %> 
                          <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: <%= user_data.mood %>%;" aria-valuenow="<%= user_data.mood %>" aria-valuemin="0" aria-valuemax="100"><%= user_data.mood %></div>
                          </div>
                          <% } else { %>
                            <%= user_data.mood %>
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th scope="row">Последний актив</th>
                        <td><%= user_data.last_active_date %></td>
                      </tr>
                      <tr>
                        <th scope="row">Хвалебные слова</th>
                        <td><%= user_data.trophy_name %></td>
                      </tr>
                      <tr>
                        <th scope="row">Ругающие слова</th>
                        <td><%= user_data.rebuke_name %></td>
                      </tr>
                      <tr>
                        <th scope="row">Вес</th>
                        <td><%= user_data.weight %></td>
                      </tr>
                      <tr>
                        <th scope="row">Рост</th>
                        <td><%= user_data.height %></td>
                      </tr>
                      <tr>
                        <th scope="row">Способ регистрации</th>
                        <td><%= user_data.auth_type %></td>
                      </tr>
                      <tr>
                        <th scope="row">Дата регистрации</th>
                        <td><%= user_data.created %></td>
                      </tr>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>
    <div class="modal fade" id="addFishcoinModal" tabindex="-1" aria-labelledby="addFishcoinModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="addFishcoinModalLabel">Добавление фишкоина</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form method="get" action="/web/users/add-fishcoin">
              <input type="hidden" name="user_id" value="<%= user_data.id %>">
              <div class="form-group">
                <label>Фишкоин</label>
                <input class="form-control" name="fishcoin" type="number">
              </div>
              <button type="submit" class="btn btn-primary">Добавить</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>